{
  "schemas": [
    {
      "name": "vitrivr",
      "connection": {
        "database": "CottontailConnectionProvider",
        "parameters": {
          "host": "127.0.0.1",
          "port": "1865"
        }
      },
      "fields": [
        {
          "name": "averagecolor",
          "factory": "AverageColor"
        },
        {
          "name": "file",
          "factory": "FileSourceMetadata"
        },
        {
          "name": "time",
          "factory": "TemporalMetadata"
        },
        {
          "name": "video",
          "factory": "VideoSourceMetadata"
        }
      ],
      "resolvers": {
        "disk": {
          "factory": "DiskResolver",
          "parameters": {
            "location": "./thumbnails/vitrivr"
          }
        }
      },
      "exporters": [
        {
          "name": "thumbnail",
          "factory": "ThumbnailExporter",
          "resolverName": "disk",
          "parameters": {
            "maxSideResolution": "400",
            "mimeType": "JPG"
          }
        },
        {
          "name": "preview",
          "factory": "VideoPreviewExporter",
          "resolverName": "disk",
          "parameters": {
            "maxSideResolution": "400",
            "mimeType": "JPG",
            "previewTimeSec": "5"
          }
        }
      ],
      "extractionPipelines": [
        {
          "name": "ingestion",
          "path": "./config-ingestion.json"
        }
      ]
    }
  ]
}
