{
  "schema": "vitrivr",
  "context": {
    "contentFactory": "InMemoryContentFactory",
    "resolverName": "disk",
    "local": {
      "stage0": {
        "path": "/Volumes/V3C1/V3C1/videos",
        "depth": "1"
      },
      "stage4": {
        "maxSideResolution": "350",
        "mimeType": "JPG"
      }
    }
  },
  "operators": {
    "enumerator": {
      "type": "ENUMERATOR",
      "factory": "FileSystemEnumerator",
      "mediaTypes": [
        "IMAGE"
      ]
    },
    "decoder": {
      "type": "DECODER",
      "factory": "ImageDecoder"
    },
    "avgColor": {
      "type": "EXTRACTOR",
      "fieldName": "averagecolor"
    },
    "thumbs": {
      "type": "EXPORTER",
      "exporterName": "thumbnail"
    },
    "fileMeta": {
      "type": "EXTRACTOR",
      "fieldName": "file"
    }
  },
  "operations": {
    "stage0": {
      "operator": "enumerator"
    },
    "stage1": {
      "operator": "decoder",
      "inputs": [
        "stage0"
      ]
    },
    "stage2": {
      "operator": "pass",
      "inputs": [
        "stage1"
      ]
    },
    "stage3": {
      "operator": "avgColor",
      "inputs": [
        "stage2"
      ]
    },
    "stage4": {
      "operator": "thumbs",
      "inputs": [
        "stage3"
      ]
    },
    "stage5": {
      "operator": "fileMeta",
      "inputs": [
        "stage4"
      ]
    }
  }
}
