{
  "schema": "LSC-metadata",
  "context": {
    "contentFactory": "InMemoryContentFactory",
    "resolverName": "disk",
    "local": {
      "enumerator": {
        "path": "../objects_exif",
        "depth": "5"
      },
      "thumbs": {
        "maxSideResolution": "350",
        "mimeType": "JPG"
      }
    }
  },
  "operators": {
    "enumerator": {
      "type": "ENUMERATOR",
      "factory": "FileSystemEnumerator",
      "mediaTypes": ["IMAGE"]
    },
    "decoder": {
      "type": "DECODER",
      "factory": "ImageDecoder"
    },
    "pass": {
      "type": "SEGMENTER",
      "factory": "PassThroughSegmenter"
    },
    "centerContent": {
      "type": "AGGREGATOR",
      "factory": "CenterContentAggregator"
    },
    "exif": {
      "type": "EXTRACTOR",
      "fieldName": "exif"
    }
  },
  "operations": {
    "stage0": {"operator": "enumerator"},
    "stage1": {"operator": "decoder", "inputs": ["stage0"]},
    "stage2": {"operator": "pass", "inputs": ["stage1"]},
    "stage3": {"operator": "centerContent", "inputs": ["stage2"]},
    "stage4": {"operator": "exif", "inputs": ["stage3"]}
  }
}
