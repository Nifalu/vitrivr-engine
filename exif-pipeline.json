{
  "context": {
    "contentFactory": {
      "factory": "InMemoryContentFactory"
    },
    "resolver": {
      "factory": "DiskResolver",
      "parameters": {
        "location": "../data"
      }
    }
  },
  "schema": "LSC-metadata",
  "enumerator": {
    "factory": "FileSystemEnumerator",
    "parameters": {
      "path": "../objects_exif",
      "depth": "5",
      "mediaTypes": "IMAGE"
    }
  },
  "decoder": {
    "factory": "ImageDecoder"
  },
  "operators": {
    "seg": {
      "type": "SEGMENTER",
      "factory": "PassThroughSegmenter"
    },
    "centerContent": {
      "type": "AGGREGATOR",
      "factory": "CenterContentAggregator"
    },
    "exif": {
      "type": "EXTRACTOR",
      "fieldName": "exif"
    },
    "fileMeta": {
      "type": "EXTRACTOR",
      "fieldName": "file"
    }
  },
  "operations": {
    "stage1": {
      "operator": "seg"
    },
    "stage2": {
      "operator": "centerContent"
    },
    "stage3": {
      "operator": "fileMeta"
    },
    "stage4": {
      "operator": "exif"
    }
  }
}