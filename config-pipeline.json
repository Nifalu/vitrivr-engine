{
  "schema": "PTT",
  "context": {
    "contentFactory": "InMemoryContentFactory",
    "resolverFactory": "DiskResolver",
    "parameters": {
      "location": "D:/ptt/thumbnails/"
    }
  },
  "enumerator": {
    "type": "ENUMERATOR",
    "factory": "FileSystemEnumerator",
    "parameters": {
      "path": "D:/ptt/PTT-Testdaten",
      "mediaTypes": "IMAGE;VIDEO",
      "depth": "5"
    }
  },
  "decoder": {
    "factory": "ImageDecoder"
  },
  "operators": {
    "pass": {
      "type": "SEGMENTER",
      "factory": "PassThroughSegmenter"
    },
    "seg": {
      "type": "SEGMENTER",
      "factory": "FixedDurationSegmenter",
      "parameters": {
        "duration": "10",
        "lookAheadTime": "1"
      }
    },
    "allContent": {
      "type": "AGGREGATOR",
      "factory": "AllContentAggregator"
    },
    "avgColor": {
      "type": "EXTRACTOR",
      "fieldName": "averagecolor"
    },
    "thumbs": {
      "type": "EXPORTER",
      "exporterName": "thumbnail",
      "parameters": {
        "maxSideResolution": "350",
        "mimeType": "JPG"
      }
    },
    "fileMeta": {
      "type": "EXTRACTOR",
      "fieldName": "file"
    }
  },
  "operations": {
    "stage1": {"operator": "seg"},
    "stage2": {"operator": "allContent"},
    "stage3": {"operator": "avgColor"},
    "stage4": {"operator": "thumbs"},
    "stage5": {"operator": "fileMeta"}
  }
}