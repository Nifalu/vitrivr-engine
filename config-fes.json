{
  "schema": "PTT",
  "context": {
    "contentFactory": {
      "factory": "CachedContentFactory",
      "parameters": {
        "location": "../cache"
      }
    },
    "resolver": {
      "factory": "DiskResolver",
      "parameters": {
        "location": "../data"
      }
    }
  },
  "enumerator": {
    "type": "ENUMERATOR",
    "factory": "FileSystemEnumerator",
    "parameters": {
      "path": "../objects",
      "mediaTypes": "IMAGE;VIDEO",
      "depth": "5"
    }
  },
  "decoder": {
    "factory": "VideoDecoder"
  },
  "operators": {
    "seg": {
      "type": "SEGMENTER",
      "factory": "FixedDurationSegmenter",
      "parameters": {
        "duration": "10",
        "lookAheadTime": "1"
      }
    },
    "centerContent": {
      "type": "AGGREGATOR",
      "factory": "CenterContentAggregator"
    },
    "fileMeta": {
      "type": "EXTRACTOR",
      "fieldName": "file"
    },
    "asr": {
      "type": "EXTRACTOR",
      "fieldName": "asr"
    },
    "clip": {
      "type": "EXTRACTOR",
      "fieldName": "clip"
    },
    "document_type": {
      "type": "EXTRACTOR",
      "fieldName": "document_type"
    },
    "ocr": {
      "type": "EXTRACTOR",
      "fieldName": "ocr"
    },
    "caption": {
      "type": "EXTRACTOR",
      "fieldName": "caption"
    }

  },

  "operations": {
    "stage1": {
      "operator": "seg"
    },
    "stage2": {
      "operator": "centerContent"
    },
    "stage4": {
      "operator": "clip"
    },
    "stage5": {
      "operator": "asr"
    },
    "stage6": {
      "operator": "document_type"
    },
    "stage7": {
      "operator": "ocr"
    },
    "stage8": {
      "operator": "caption"
    },
    "stage9": {
      "operator": "fileMeta"
    }
  }
}