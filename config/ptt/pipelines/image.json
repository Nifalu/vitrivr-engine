{
  "schema": "ptt",
  "context": {
    "contentFactory": "CachedContentFactory",
    "resolverName": "disk",
    "local": {
      "content": {
        "path": "D:/ptt/cache"
      },
      "enumerator": {
        "path": "D:/ptt/PTT-Testdaten",
        "depth": "5"
      },
      "thumbs": {
        "maxSideResolution": "400",
        "mimeType": "JPG"
      },
      "filter": {
        "type": "SOURCE:IMAGE"
      }
    }
  },
  "operators": {
    "enumerator": {
      "type": "ENUMERATOR",
      "factory": "FileSystemEnumerator",
      "mediaTypes": ["IMAGE"]
    },
    "decoder": {
      "type": "DECODER",
      "factory": "ImageDecoder"
    },
    "clip": {
      "type": "EXTRACTOR",
      "fieldName": "clip"
    },
    "thumbs": {
      "type": "EXPORTER",
      "exporterName": "thumbnail"
    }
  },
  "operations": {
    "stage0": {"operator": "enumerator"},
    "stage1": {"operator": "decoder", "inputs": ["stage0"]},
    "stage2": {"operator": "clip", "inputs": ["stage1"]},
    "stage3": {"operator": "thumbs", "inputs": ["stage2"]}
  },
  "output": [
    "stage3"
  ]
}
